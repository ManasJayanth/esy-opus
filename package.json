{
  "name": "esy-opus",
  "version": "1.3.1000",
  "description": "opus packaged for esy",
  "esy": {
    "buildsInSource": true,
    "build": [
      [
        "chmod",
        "755",
        "./configure"
      ],
      [
        "bash",
        "-c",
        "#{os == 'windows' ? './configure --prefix=$cur__install --host x86_64-w64-mingw32' : './configure --prefix=$cur__install'}"
      ],
      [
        "make"
      ],
      [
        "make",
        "install"
      ]
    ]
  },
  "dependencies": {},
  "resolutions": {}
}
